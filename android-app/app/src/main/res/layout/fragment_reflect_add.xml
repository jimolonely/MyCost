<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".func.reflect.ReflectAddFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_reflect_add_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="add types" />

        <LinearLayout
            android:id="@+id/ll_reflect_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/tv_reflect_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请选择主题"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_reflect_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请选择日期"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/edt_reflect_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="地点"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edt_reflect_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="人物"
            android:inputType="textMultiLine"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edt_reflect_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:hint="事件/内容/感受"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_reflect_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADD"
            android:textSize="20sp" />
    </LinearLayout>
</ScrollView>